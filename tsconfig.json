{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "baseUrl": "./server",
    "paths": {
      "@domain/*": [
        "domain/*"
      ],
      "@usecases/*": [
        "usecases/*"
      ],
      "@infra/*": [
        "infrastructure/*"
      ]
    }
  }
}
